{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://cognitive-modules.dev/schema/v2.2/stream-events.json",
  "title": "CEP Stream Events v2.2",
  "description": "Streaming event model for CEP. A stream MUST allow reconstruction of a final response envelope via the terminal end event.",
  "type": "object",
  "additionalProperties": false,
  "required": ["type", "version", "timestamp_ms", "module"],
  "properties": {
    "type": {
      "type": "string",
      "enum": ["start", "delta", "meta", "end", "error"]
    },
    "version": {
      "type": "string",
      "enum": ["2.2"]
    },
    "timestamp_ms": {
      "type": "number",
      "minimum": 0
    },
    "module": {
      "type": "string"
    },
    "provider": {
      "type": "string"
    },
    "delta": {
      "type": "string",
      "description": "Incremental output delta for streaming."
    },
    "meta": {
      "type": "object",
      "description": "Meta updates. Shape matches envelope meta (subset allowed).",
      "properties": {
        "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
        "risk": { "type": "string", "enum": ["none", "low", "medium", "high"] },
        "explain": { "type": "string", "maxLength": 280 },
        "trace_id": { "type": "string" },
        "model": { "type": "string" },
        "latency_ms": { "type": "number", "minimum": 0 }
      },
      "additionalProperties": true
    },
    "result": {
      "type": "object",
      "description": "Final envelope for end events. Validated separately against response-envelope.schema.json."
    },
    "error": {
      "type": "object",
      "required": ["code", "message"],
      "properties": {
        "code": { "type": "string" },
        "message": { "type": "string" }
      },
      "additionalProperties": true
    }
  },
  "allOf": [
    {
      "if": { "properties": { "type": { "const": "delta" } } },
      "then": { "required": ["delta"] }
    },
    {
      "if": { "properties": { "type": { "const": "meta" } } },
      "then": { "required": ["meta"] }
    },
    {
      "if": { "properties": { "type": { "const": "end" } } },
      "then": { "required": ["result"] }
    },
    {
      "if": { "properties": { "type": { "const": "error" } } },
      "then": { "required": ["error"] }
    }
  ]
}

