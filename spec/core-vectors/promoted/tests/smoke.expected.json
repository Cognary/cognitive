{
  "$validate": {
    "type": "object",
    "required": ["ok", "meta", "data"],
    "properties": {
      "ok": { "const": true },
      "meta": {
        "type": "object",
        "required": ["confidence", "risk", "explain"],
        "properties": {
          "confidence": { "type": "number", "minimum": 0, "maximum": 1 },
          "risk": { "type": "string" },
          "explain": { "type": "string", "maxLength": 280 }
        }
      },
      "data": {
        "type": "object",
        "required": ["rationale"],
        "properties": {
          "rationale": { "type": "string" }
        }
      }
    }
  }
}

